# ========================================
# КОНФИГУРАЦИЯ GOOGLE SHEETS API
# ========================================

# URL вашей Google таблицы
SPREADSHEET_URL=https://docs.google.com/spreadsheets/d/your-spreadsheet-id/edit

# ========================================
# КОНФИГУРАЦИЯ БАЗЫ ДАННЫХ
# ========================================

# URL базы данных SQLite (по умолчанию)
DATABASE_URL=sqlite:///real_estate.db

# ========================================
# КОНФИГУРАЦИЯ ЛОГИРОВАНИЯ
# ========================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Файл для записи логов
LOG_FILE=parser.log

# ========================================
# КОНФИГУРАЦИЯ ПАРСИНГА
# ========================================

# Интервал между запусками парсинга (в секундах)
PARSING_INTERVAL=300

# Максимальное количество попыток при ошибках
MAX_RETRIES=3

# Задержка между запросами (в секундах)
REQUEST_DELAY=2

# ========================================
# КОНФИГУРАЦИЯ SELENIUM/PLAYWRIGHT
# ========================================

# Запуск браузера в фоновом режиме (true/false)
HEADLESS=true

# Таймаут для загрузки страницы (в секундах)
BROWSER_TIMEOUT=30

# Размер окна браузера
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# ========================================
# КОНФИГУРАЦИЯ ПЛАНИРОВЩИКА
# ========================================

# Интервал очистки базы данных (в неделях)
CLEAR_INTERVAL_WEEKS=2

# ========================================
# КОНФИГУРАЦИЯ ПРОКСИ (ОПЦИОНАЛЬНО)
# ========================================

# Использовать прокси (true/false)
USE_PROXY=false

# Адрес прокси сервера
PROXY_HOST=127.0.0.1
PROXY_PORT=8080

# Логин для прокси (если требуется)
PROXY_USERNAME=

# Пароль для прокси (если требуется)
PROXY_PASSWORD=

# ========================================
# КОНФИГУРАЦИЯ COOKIES (ОПЦИОНАЛЬНО)
# ========================================

# Путь к файлу cookies для авторизации
# Поддерживаются форматы: cookies.json, cookies.txt
COOKIES_FILE=cookies.json

# Формат cookies.json:
# {"domain": "example.com", "name": "cookie_name", "value": "cookie_value"}

# Формат cookies.txt:
# domain.com	TRUE	/	FALSE	1735689600	cookie_name	cookie_value

# Примечание: Файлы cookies содержат конфиденциальные данные
# и не загружаются в репозиторий. Создайте их локально. 